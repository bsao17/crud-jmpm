{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
    <div class="container card mt-5">
        <h1>Connexion</h1>

        <div>
            {% if error %}
                <div class="container alert alert-danger">
                    {{ error.message() }}
                </div>
            {% endif %}
        </div>

        <div class="form-group">
            {{ form_start(formView) }}
            {{ form_widget(formView) }}
            <button type="submit" class="btn btn-danger my-3">Se connecter</button>
            {{ form_end(formView) }}
        </div>
    </div>
    
    <figure class="w-25 m-auto border mt-5 border-dark border-end-0 border-start-0 border-4 rounded-circle bg-light">
        <img src="pictures/logo_apiplatform/Logo_Circle_webby.svg" class="w-50 border bg-light border border-top-0 border-bottom-0 border-danger border-4 rounded-pill m-3 " alt="">
    </figure>

{% endblock %}
